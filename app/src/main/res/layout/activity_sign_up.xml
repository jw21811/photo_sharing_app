<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:id="@+id/img_signUp_item_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        app:cardCornerRadius="32dp"
        app:cardElevation="0dp">

        <ImageView
            android:layout_width="248dp"
            android:layout_height="246dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:src="@mipmap/img_sign_up" />
    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_marginBottom="0dp">

        <!--输入账号处的图标-->
        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="9dp"
            android:src="@drawable/baseline_person_outline_24" />

        <!--账号输入文本框-->
        <EditText
            android:id="@+id/et_signUp_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:layout_marginEnd="48dp"
            android:layout_marginBottom="4dp"
            android:hint="@string/InputAccount"
            android:inputType="text"
            android:maxLines="1" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="16dp">

        <!--输入密码处的图标-->
        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/baseline_lock_open_24" />

        <!--密码输入文本框-->
        <EditText
            android:id="@+id/et_signUp_pwd"
            android:layout_width="315dp"
            android:layout_height="match_parent"
            android:layout_marginStart="48dp"
            android:layout_marginEnd="48dp"
            android:layout_marginBottom="4dp"
            android:hint="@string/InputPassword"
            android:inputType="textPassword"
            android:maxLines="1" />

    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="16dp">

        <!--输入密码处的图标-->
        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/baseline_lock_open_24" />

        <EditText
            android:id="@+id/et_signUp_pwd_again"
            android:layout_width="315dp"
            android:layout_height="match_parent"
            android:layout_marginStart="48dp"
            android:layout_marginEnd="48dp"
            android:layout_marginBottom="4dp"
            android:hint="@string/InputPasswordAgain"
            android:inputType="textPassword"
            android:maxLines="1" />
        <!--切换密码可见性按钮-->
        <ImageView
            android:id="@+id/iv_signUp_pwd_switch_again"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:layout_alignParentEnd="true"

            android:layout_alignParentBottom="true"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="7dp"
            android:src="@drawable/baseline_visibility_off_24" />

        <!--切换密码可见性按钮-->
        <ImageView
            android:id="@+id/iv_login_pwd_switch_again"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:layout_alignParentEnd="true"

            android:layout_alignParentBottom="true"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="7dp"
            android:src="@drawable/baseline_visibility_off_24" />



    </RelativeLayout>

    <Button
        android:id="@+id/btn_signUp_signUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="1dp"
        android:background="@drawable/button_selector"
        android:text="@string/signUp" />

</LinearLayout>